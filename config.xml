<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ebizne.porcomida" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Porcomida</name>
    <description>
       PORCOMIDA.COM
    </description>
    <author email="rlopez@rlm.com.mx" href="www.rlm.com.mx">
       Addo Studios
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="target-device" value="handset" />
    <platform name="android">
        <splash density="land-hdpi" src="www/img/splash/splash.png" />
        <splash density="land-ldpi" src="www/img/splash/splash.png" />
        <splash density="land-mdpi" src="www/img/splash/splash.png" />
        <splash density="land-xhdpi" src="www/img/splash/splash.png" />
        <splash density="port-hdpi" src="www/img/splash/splash.png" />
        <splash density="port-ldpi" src="www/img/splash/splash.png" />
        <splash density="port-mdpi" src="www/img/splash/splash.png" />
        <splash density="port-xhdpi" src="www/img/splash/splash.png" />
    </platform>
    <platform name="ios">
        <splash height="480" src="www/img/splash/splash.png" width="320" />
        <splash height="960" src="www/img/splash/splash.png" width="640" />
        <splash height="1024" src="www/img/splash/splash.png" width="768" />
        <splash height="2048" src="www/img/splash/splash.png" width="1536" />
        <splash height="768" src="www/img/splash/splash.png" width="1024" />
        <splash height="1536" src="www/img/splash/splash.png" width="2048" />
        <splash height="1136" src="www/img/splash/splash.png" width="640" />
        <splash height="1334" src="www/img/splash/splash.png" width="750" />
        <splash height="2208" src="www/img/splash/splash.png" width="1242" />
        <splash height="1242" src="www/img/splash/splash.png" width="2208" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
    </feature>
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <gap:plugin name="com.phonegap.plugins.facebookconnect">
        <param name="APP_ID" value="301914963325646" />
        <param name="APP_NAME" value="Porcomida" />
    </gap:plugin>
    <gap:plugin name="org.apache.cordova.core.geolocation" version="0.3.10" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.device-motion" version="0.2.10" />
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <icon src="icon.png" />
    <access origin="*" />
    <preference name="EnableViewportScale" value="false" />
    <engine name="android" spec="^4.0.2" />
</widget>
